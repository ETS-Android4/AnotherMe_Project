<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8EFED"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_stream"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/stopS"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="211dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/xxxxx"/>

        <Button
            android:id="@+id/startS"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="211dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/yyyy"/>

        <Button
            android:id="@+id/startRecordS"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="278dp"
            android:layout_marginTop="111dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/reco" />

        <Button
            android:id="@+id/stopRecordS"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="278dp"
            android:layout_marginTop="111dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/reco"
            android:backgroundTint="#F40303"/>

        <Button
            android:id="@+id/callS"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="245dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/call" />


    </RelativeLayout>

        </FrameLayout>