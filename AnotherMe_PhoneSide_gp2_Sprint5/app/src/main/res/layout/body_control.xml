<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8EFED"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_stream_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8EFED" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/stream_joy_speed"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/linearrow1"
            custom:JV_borderColor="#A6434545"
            custom:JV_borderWidth="2dp"
            custom:JV_buttonColor="#A6434545"
            custom:JV_buttonImage="@drawable/b_letter"
            custom:JV_fixedCenter="true" />

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/stream_joy_direction"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/linearrow"
            custom:JV_borderColor="#A6434545"
            custom:JV_borderWidth="2dp"
            custom:JV_buttonColor="#A6434545"
            custom:JV_buttonImage="@drawable/b_letter"
            custom:JV_fixedCenter="true"/>

        <Button
            android:id="@+id/stopB"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="224dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/xxxxx"/>

        <Button
            android:id="@+id/startB"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="224dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/yyyy"/>

        <Button
            android:id="@+id/startRecordB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="295dp"
            android:layout_marginTop="-68dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/reco"/>

        <Button
            android:id="@+id/stopRecordB"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="295dp"
            android:layout_marginTop="-68dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/reco"
            android:backgroundTint="#F40303"/>

        <Button
            android:id="@+id/callB"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="274dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/call" />

    </RelativeLayout>

</FrameLayout>